type Query {
    user(id: ID): User
    users: [User]
}

type Mutation {
    createUser(user: CreateUser): User
    updateUser(user: UpdateUser): User
    removeUser(id: ID): Boolean
}

type User {
    id: ID
    name: String
    email: String
}

input CreateUser {
    name: String
    email: String
}

input UpdateUser {
    id: ID
    name: String
    email: String
}